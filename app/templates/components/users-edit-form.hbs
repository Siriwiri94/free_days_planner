<div class="box" style="margin:auto">
<div class="columns">
<div class="column is-4"></div>
<div class="column is-4 is-centered">
    <div class="field">
    <label class="">User name:</label>
    <div class="control">
        {{input class="input" type="text" value=model.username}}
    </div>
    </div>
    <div class="field">
    <label class="">Name:</label>
    <div class="control">
        {{input class="input" type="text" value=model.name}}
    </div>
    </div>
    <div class="field">
    <label class="">Surname:</label>
    <div class="control">
        {{input class="input" type="text" value=model.surname}}
    </div>
    </div>
    <div class="field">
    <label class="">Phone number:</label>
    <div class="control">
        {{input class="input" type="text" value=model.phone}}
    </div>
    </div>
    <div class="field">
    <label class="">Email:</label>
    <div class="control">
        {{input class="input" type="text" value=model.email}}
    </div>
    </div>
    <div class="control has-text-centered">
        <button class="button is-primary is-rounded is-focused" {{action 'recordUser'}}>Save</button>
    </div>
</div>
</div>
</div>