{{#if currentUser.user.isAdmin}}
    <h1 class="text-center title">Users</h1>
    <form {{action 'storeuser' on='submit'}} class="box is-centered">
        <div class="field">
        <p class="control has-icons-left has-icons-right">
            {{input id='username' value=username}}
            <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
            </span>
            <span class="icon is-small is-right">
            <i class="fas fa-check"></i>
            </span>
        </p>
        </div>
        <div class="field">
        <p class="control has-icons-left">
            {{input id='password' value=password type="password"}}
            <span class="icon is-small is-left">
            <i class="fas fa-lock"></i>
            </span>
        </p>
        </div>
        <div class="field">
        <p class="control">
            <button id="savebutton" class="button is-success" >
            Save
            </button>
        </p>
        </div>
    </form>
    {{table-users}}
{{else}}
<h1 class="text-center text-danger font-italic"><u><i>You are not authorized</i></u></h1>
{{/if}}
{{outlet}}